{
  "name": "iCrawledTw-Electron",
  "version": "1.0.0",
  "description": "Modern Twitter Media Downloader built with Electron",
  "main": "main.js",
  "homepage": "https://github.com/dekotan24/iCrawledTw-Electron",
  "author": {
    "name": "dekotan24",
    "email": "deko@fanet.work"
  },
  "license": "MIT",
  "keywords": [
    "downloader",
    "social-media"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dekotan24/iCrawledTw-Electron.git"
  },
  "bugs": {
    "url": "https://github.com/dekotan24/iCrawledTw-Electron/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "clean": "rimraf dist build node_modules/.cache",
    "prebuild": "npm run clean",
    "build": "npm run build:all",
    "build:all": "electron-builder --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:mac": "electron-builder --mac --publish=never", 
    "build:linux": "electron-builder --linux --publish=never",
    "build:dir": "electron-builder --dir",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish=always",
    "prepare-release": "npm version patch && git push && git push --tags"
  },
  "build": {
    "appId": "work.fanet.icrawledtw-electron",
    "productName": "iCrawledTw-Electron",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js", 
      "renderer.js",
      "twitter-scraper.js",
      "index.html",
      "style.css",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "iCrawledTw-Electron",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "iCrawledTw-Electron"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "iCrawledTw-Electron",
      "backgroundColor": "#0a0e1a",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "synopsis": "Modern Twitter Media Downloader",
      "description": "A modern and feature-rich Twitter media downloader with beautiful UI"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "dekotan24",
      "repo": "iCrawledTw-Electron"
    }
  },
  "devDependencies": {
    "electron": "^25.9.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12"
  }
}